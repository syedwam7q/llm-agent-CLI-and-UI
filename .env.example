# IMPORTANT: Never commit this file to Git after adding your API keys!
# This file contains sensitive information that should be kept private.

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# OpenAI API Key (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
# This is required for the LLM functionality
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (OPTIONAL)
# Get your API key from: https://console.anthropic.com/
# Alternative LLM provider (currently not fully implemented)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily Search API Key (OPTIONAL)
# Get your API key from: https://tavily.com/
# Required for web search functionality, falls back to mock search if not provided
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Identity
AGENT_NAME=LLM-Agent
AGENT_VERSION=2.0.0

# LLM Model Settings
# Available models: gpt-4o, gpt-4o-mini, gpt-4-turbo-preview, gpt-3.5-turbo
AGENT_MODEL=gpt-4o-mini
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=4000

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Enable/disable specific features
ENABLE_WEB_SEARCH=true
ENABLE_CODE_EXECUTION=true
ENABLE_FILE_OPERATIONS=true

# =============================================================================
# WEB UI CONFIGURATION
# =============================================================================

# Web interface settings
WEB_UI_ENABLED=true
WEB_UI_PORT=8000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# =============================================================================
# DATA STORAGE
# =============================================================================

# Data directory and database settings
DATA_DIR=data
DATABASE_URL=sqlite:///data/agent.db

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# File upload restrictions
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=txt,json,csv,pdf,docx,xlsx

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Performance and concurrency settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =============================================================================

# Development mode (enables debug features)
# DEBUG_MODE=false

# Custom model endpoints (for local models)
# CUSTOM_MODEL_ENDPOINT=http://localhost:11434
# CUSTOM_MODEL_NAME=llama2